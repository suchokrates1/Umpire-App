<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TennisRefereeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TennisReferee"
        android:usesCleartextTraffic="true">
        
        <!-- Language Selection - ekran startowy -->
        <activity
            android:name=".ui.language.LanguageSelectionActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Court Selection -->
        <activity
            android:name=".ui.courtselection.CourtSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <!-- Player Selection -->
        <activity
            android:name=".ui.playerselection.PlayerSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.courtselection.CourtSelectionActivity"/>
        
        <!-- Match -->
        <activity
            android:name=".ui.match.MatchActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.playerselection.PlayerSelectionActivity"/>
        
    </application>

</manifest>
