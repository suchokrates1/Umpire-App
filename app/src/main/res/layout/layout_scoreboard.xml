<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/score_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/score_background">

        <!-- Timer meczu -->
        <TextView
            android:id="@+id/textMatchTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="01:23:45"/>

        <!-- Tryb gry (Tiebreak/Super Tiebreak) -->
        <TextView
            android:id="@+id/textGameMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/accent"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Tie-break (do 7)"/>

        <!-- NagÅ‚Ã³wki kolumn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scoreboard_player"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="start"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/scoreboard_points"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"/>

            <TextView
                android:id="@+id/headerSet1"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/scoreboard_set1"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"/>

            <TextView
                android:id="@+id/headerSet2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/scoreboard_set2"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Gracz 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- Flaga i nazwisko -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <TextView
                    android:id="@+id/textPlayer1Flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <!-- Nazwisko -->
                <TextView
                    android:id="@+id/textPlayer1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/score_text"/>
                
                <!-- Ikona serwisu (piÅ‚ka tenisowa) -->
                <TextView
                    android:id="@+id/textPlayer1ServerIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¾"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Punkty -->
            <TextView
                android:id="@+id/textPlayer1Points"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                android:gravity="center"/>

            <!-- Set 1 -->
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">
                
                <View
                    android:id="@+id/backgroundPlayer1Set1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"/>
                
                <TextView
                    android:id="@+id/textPlayer1Set1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/score_text"
                    android:gravity="center"
                    android:paddingVertical="4dp"/>
            </FrameLayout>

            <!-- Set 2 -->
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">
                
                <View
                    android:id="@+id/backgroundPlayer1Set2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"/>
                
                <TextView
                    android:id="@+id/textPlayer1Set2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/score_text"
                    android:gravity="center"
                    android:paddingVertical="4dp"/>
            </FrameLayout>

        </LinearLayout>

        <!-- Gracz 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp">

            <!-- Flaga i nazwisko -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <TextView
                    android:id="@+id/textPlayer2Flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <!-- Nazwisko -->
                <TextView
                    android:id="@+id/textPlayer2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/score_text"/>
                
                <!-- Ikona serwisu (piÅ‚ka tenisowa) -->
                <TextView
                    android:id="@+id/textPlayer2ServerIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¾"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Punkty -->
            <TextView
                android:id="@+id/textPlayer2Points"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                android:gravity="center"/>

            <!-- Set 1 -->
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">
                
                <View
                    android:id="@+id/backgroundPlayer2Set1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"/>
                
                <TextView
                    android:id="@+id/textPlayer2Set1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/score_text"
                    android:gravity="center"
                    android:paddingVertical="4dp"/>
            </FrameLayout>

            <!-- Set 2 -->
            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">
                
                <View
                    android:id="@+id/backgroundPlayer2Set2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"/>
                
                <TextView
                    android:id="@+id/textPlayer2Set2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/score_text"
                    android:gravity="center"
                    android:paddingVertical="4dp"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
