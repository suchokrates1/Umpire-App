<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/match_finished_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/winner_label"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Tabela statystyk -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2"
            android:layout_marginBottom="32dp"
            android:background="?android:attr/colorBackground">

            <!-- Nagłówek tabeli -->
            <TableRow
                android:background="?android:attr/colorPrimary"
                android:padding="8dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/statistics"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="8dp"/>
                
                <TextView
                    android:id="@+id/headerPlayer1Name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Player 1"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="8dp"/>
                
                <TextView
                    android:id="@+id/headerPlayer2Name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Player 2"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Asy -->
            <TableRow
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/aces"
                    android:textColor="?android:attr/textColorPrimary"
                    android:padding="8dp"/>
                
                <TextView
                    android:id="@+id/textAcesPlayer1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"/>
                
                <TextView
                    android:id="@+id/textAcesPlayer2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical"/>

            <!-- Podwójne błędy -->
            <TableRow
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/double_faults"
                    android:textColor="?android:attr/textColorPrimary"
                    android:padding="8dp"/>
                
                <TextView
                    android:id="@+id/textDoubleFaultsPlayer1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"/>
                
                <TextView
                    android:id="@+id/textDoubleFaultsPlayer2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>
