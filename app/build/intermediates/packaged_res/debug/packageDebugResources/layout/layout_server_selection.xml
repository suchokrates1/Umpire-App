<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/who_serves_first"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

    <!-- Przycisk zmiany stron -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSwapSides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swap_sides"
        android:textSize="14sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:icon="@android:drawable/ic_menu_rotate"
        app:iconGravity="start"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Duży przycisk - Gracz 1 serwuje -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlayer1Serves"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="[Gracz 1]\nSerwuje"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSwapSides"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonPlayer2Serves"
        app:layout_constraintWidth_percent="0.48"/>

    <!-- Duży przycisk - Gracz 2 serwuje -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlayer2Serves"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="[Gracz 2]\nSerwuje"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSwapSides"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonPlayer1Serves"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48"/>

</androidx.constraintlayout.widget.ConstraintLayout>
